{
    "manifest_version": 2,
    "name": "Hello World Plugin",
    "version": "1.0",
    "description": "A simple 'Hello World' Firefox plugin",
    "icons": {
      "48": "icons/icon.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
        "scripts": ["background.js"]
      },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  